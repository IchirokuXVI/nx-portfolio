{
  "name": "landing",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/landing/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/landing",
        "index": "apps/landing/src/index.html",
        "main": "apps/landing/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/landing/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/landing/public",
            "output": "/public"
          }
        ],
        "styles": ["apps/landing/src/styles.scss"],
        "customWebpackConfig": {
          "path": "apps/landing/webpack.config.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "12kb",
              "maximumError": "16kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/landing/webpack.prod.config.ts"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "build:docker": {
      "executor": "@portfolio/docker:build",
      "options": {
        "imageName": "nx-portfolio/landing"
      },
      "configurations": {
        "development": {
          "versionTag": "dev",
          "buildArgs": {
            "BUILDER_TAG": "dev"
          }
        },
        "production": {
          "pushToRegistry": true
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/landing/jest.config.ts"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "landing:build",
        "port": 4201,
        "watch": false
      },
      "configurations": {
        "development": {
          "buildTarget": "landing:build:development"
        },
        "production": {
          "buildTarget": "landing:build:production"
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/angular:dev-server",
      "options": {
        "port": 4201,
        "publicHost": "http://localhost:4201"
      },
      "configurations": {
        "production": {
          "publicHost": "https://mfe.ichirokuxvi.com/landing",
          "buildTarget": "landing:build:production"
        },
        "development": {
          "buildTarget": "landing:build:development"
        }
      },
      "defaultConfiguration": "development"
    }
  }
}
