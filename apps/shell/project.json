{
  "name": "shell",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "ng-shell",
  "sourceRoot": "apps/shell/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rspack:rspack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/shell",
        "index": "apps/shell/src/index.html",
        "main": "apps/shell/src/main.ts",
        "polyfills": "node_modules/zone.js",
        "tsConfig": "apps/shell/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/shell/public",
            "output": "/public"
          }
        ],
        "styles": ["apps/shell/src/styles.scss"],
        "scripts": [],
        "rspackConfig": "apps/shell/rspack.config.ts"
      },
      "configurations": {
        "production": {
          "rspackConfig": "apps/shell/rspack.prod.config.ts",
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "shell:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/shell/jest.config.ts"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/rspack:module-federation-static-server",
      "options": {
        "buildTarget": "shell:build",
        "port": 4200,
        "spa": true
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/rspack:module-federation-dev-server",
      "options": {
        "port": 4200,
        "publicHost": "http://localhost:4200"
      },
      "configurations": {
        "production": {
          "buildTarget": "shell:build:production"
        },
        "development": {
          "buildTarget": "shell:build:development",
          "devRemotes": ["odontogram", "landing"],
          "poll": 1500,
          "host": "0.0.0.0"
        }
      },
      "defaultConfiguration": "development"
    }
  }
}
